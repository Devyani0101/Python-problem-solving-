# Using the trapezoidal rule with n equals to 6 to approximate 0 to Pi  sin square xpythusing pyt# Using the trapezoidal rule with n equals to 6 to approximate 0 to Pi  sin square xpythusing python

import numpy as np

def trapezoidal_rule(func, a, b, n):

  h = (b - a) / n
  x = np.linspace(a, b, n + 1)
  y = func(x)
  integral = (h / 2) * (y[0] + 2 * np.sum(y[1:-1]) + y[-1])
  return integral

def func(x):
  return np.sin(x)**2

a = 0
b = np.pi
n = 6

approximate_integral = trapezoidal_rule(func, a, b, n)

print(f"The approximate value of the integral of sin^2(x) from 0 to Pi using the trapezoidal rule with n={n} is: {approximate_integral}")

